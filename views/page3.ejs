<%- include('profileheader') %>

<script>
  var stateObject = {
    Mumbai: [
      "kokilaben dhirubhai ambani hospital",
      "Nanavati Hospital",
      "Fortis Hospital",
      "SevenHills Hospital",
      "S. L Raheja Hospital",
      "Global Hospital, Parel",
      "Kohinoor Hospital",
      "Wockhardt Hospital, Mira Road",
      "Hiranandani Hospital, Vashi",
    ],
    Lucknow: [
      "Sahara Hospital",
      "Mayo Hospital",
      "Ford Hospital",
      "Medanta Hospital",
      "Shekhar Hospital",
      "SGPGI Hospital",
      "Medison Hospital",
      "Ajanta Hospital and IVF Centre",
      "Fatima Hospital",
    ],
  };
  window.onload = function () {
    var countySel = document.getElementById("city"),
      districtSel = document.getElementById("med");
    for (var country in stateObject) {
      countySel.options[countySel.options.length] = new Option(country);
    }
    /* countySel.onchange = function () {
        stateSel.length = 1; // remove all options bar first
        districtSel.length = 1; // remove all options bar first
        if (this.selectedIndex < 1) return; // done
        for (var state in stateObject[this.value]) {
          stateSel.options[stateSel.options.length] = new Option(state, state);
        }
      }; */
    //countySel.onchange(); // reset in case page is reloaded
    countySel.onchange = function () {
      districtSel.length = 1; // remove all options bar first
      if (this.selectedIndex < 1) return; // done
      var district = stateObject[countySel.value];
      for (var i = 0; i < district.length; i++) {
        districtSel.options[districtSel.options.length] = new Option(
          district[i],
          district[i]
        );
      }
    };
  };
</script>

<div class="main navside" style="margin-top: 4%">
  <div class="contact-clean">
    <form method="POST" action="/profile/search_result">
      <h2 class="text-center">Search By City or Hospital</h2>
      <div class="form-group">
        <select class="form-control" id="city" size="1" name="city">
          <option value="" selected>Select The City</option>
          <!-- <option value="Lucknow">Lucknow</option>
              <option value="Mumbai">Mumbai</option> -->
        </select>
      </div>
      <div class="form-group">
        <select class="form-control" id="med" size="1" name="Hospital">
          <option value="" selected>Select the Hospital</option>
          <!-- <% hospital["Lucknow"].forEach(function(data){%>
              <option value="4"><%=data['name']%></option>
      
              <%})%> -->
        </select>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">send</button>
      </div>
    </form>
  </div>
</div>

