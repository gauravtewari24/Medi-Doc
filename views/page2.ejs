<%- include('profileheader') %>

<div class="main navside " style="margin-top: 4%;">
    <div id="wrapper">
        <div id="content">
          <!-- nav ends and details area  -->
          <div
            class="d-sm-flex justify-content-between align-items-center mb-4"
            style="height: 15px"
          >
            <h2 class=" mb-0" style="margin-left: 18px; color: white;">
              Personal Dashboard
            </h2>
            
            <form action="/generateReport" method="GET">
              <input type="submit" style="margin-right: 15px;" class="button" value="Generate report"/>
            </form>
          </div>
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-5 col-xl-4">
                <div class="card shadow mb-4" style="height: 510px">
                  <div class="card-header d-flex justify-content-between align-items-center"> 
                    <h6 class="text-primary font-weight-bold m-0"> Personal details and status </h6>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col text-center">
                        <img src="https://cdn2.vectorstock.com/i/1000x1000/20/76/man-avatar-profile-vector-21372076.jpg" style="width: 50px; height: 50px; border-radius: 50%;" />
                      </div>
                      <div class="col text-center" style="height: 55px">
                        <p class="text-success"><%= f_name + " "+ l_name%></p>
                      </div>
                    </div>
                    <div class="row" style="height: 55px">
                      <div class="col text-center" style="padding-top: 12px">
                        <p>AGE : <%= age %></p>
                      </div>
                      <div class="col text-center" style="padding-top: 12px">
                        <p>GENDER : <%= gender %></p>
                      </div>
                    </div>
                    <div class="row" style="height: 55px">
                      <div class="col text-center" style="padding-top: 12px">
                        <p style="margin-bottom: 0px">Health insurance :</p>
                      </div>
                      <div class="col text-center" style="padding-top: 12px">
                        <p class="text-success"><%= h_i_s %></p>
                      </div>
                    </div>
                    <div class="row" style="height: 55px">
                      <div class="col text-center" style="padding-top: 12px">
                        <p style="margin-bottom: 0px">phone number :</p>
                      </div>
                      <div class="col text-center" style="padding-top: 12px">
                        <p class="text-primary"><%= phone %></p>
                      </div>
                    </div>
                    <div class="row" style="height: 55px">
                      <div class="col text-center" style="padding-top: 12px">
                        <p style="margin-bottom: 0px">email :</p>
                      </div>
                      <div class="col text-center" style="padding-top: 12px">
                        <p class="text-primary"><%= email %></p>
                      </div>
                    </div>
                    <div class="row" style="height: 55px">
                      <div class="col text-center" style="padding-top: 12px">
                        <p class="text-success"> session active</p>
                      </div>
                    </div>
                    
                    <div class="row">
                      <div class="col" style="height: 70px; text-align: center; margin-top: 50px">
                        <form action="/profile/update_stat" method="GET">
                          <input type="submit" class="button" value="update health details"/>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- 2nd slide here -->
              <div class="col-lg-7 col-xl-8">
                <!-- first card -->
                <div class="card shadow mb-4" style="height: 200px">
                  <div class="card-header d-flex justify-content-between align-items-center" style="padding-top: 10px; padding-bottom: 10px">
                    <h6 class="text-primary font-weight-bold m-0"> Health metrics and other information</h6>
                  </div>
                  <div class="card-body" style="display: flex; text-align: center;">
                    <div class="card " style="width: 8rem; float: left; margin-left: 10px; margin-right: 10px; background-color: aquamarine;">
                      <div class="card-body">
                        <p style="font-size: .9rem; margin-bottom: 0px;">blood oxygen:</p>
                        <p style="font-size: .9rem;"><%= b_o %> %SaO2</p>
                      </div>
                    </div>
                    <div class="card" style="width: 8rem; float: left; margin-left: 10px; margin-right: 10px; background-color: aquamarine;">
                      <div class="card-body">
                        <p style="font-size: .9rem; margin-bottom: 0px;">blood presure:</p>
                        <p style="font-size: .9rem;"><%= b_p %> mmHg</p>
                      </div>
                    </div>
                    <div class="card" style="width: 8rem; float: left; margin-left: 10px; margin-right: 10px; background-color: aquamarine;">
                      <div class="card-body">
                        <p style="font-size: .9rem; margin-bottom: 0px;">blood sugar:</p>
                        <p style="font-size: .9rem;"><%= b_s %> mmol/L</p>
                      </div>
                    </div>
                    <div class="card " style="width: 8rem; float: left; margin-left: 10px; margin-right: 10px; background-color: aquamarine;">
                      <div class="card-body">
                        <p style="font-size: .9rem; margin-bottom: 0px;">TSH:</p>
                        <p style="font-size: .9rem;"><%= b_t %> ml/L</p>
                      </div>
                    </div>
                    <div class="card " style="width: 8rem; float: left; margin-left: 10px; margin-right: 10px; background-color: aquamarine;">
                      <div class="card-body">
                        <p style="font-size: .9rem; margin-bottom: 0px;">PSA:</p>
                        <p style="font-size: .9rem;"><%= b_psa %> ml/L</p>
                      </div>
                    </div>
                </div>
                </div>
                <!-- images slide here -->
                <div style="margin-top: -8px" class="card shadow mb-4">
                  <div class="card-header d-flex justify-content-between align-items-center" style="padding-top: 10px; padding-bottom: 10px">
                    <h6 class="text-primary font-weight-bold m-0"> Health tip of the day&nbsp; </h6>
                  </div>
                  <div class="card-body">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                      <div class="carousel-inner">
                        
                        <div class="carousel-item">
                          <img class="d-block w-100" style="height: 205px;" src="https://consumerwatchdog.org/sites/default/files/SLIDER-COVID-Tips_4.jpg">
                        </div>
                        <div class="carousel-item active">
                          <img class="d-block w-100" style="height: 205px;" src="https://www.redcross.org/content/dam/redcross/about-us/news/2020/coronavirus-safety-tw.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                          <img class="d-block w-100" style="height: 205px" src="https://3.files.edl.io/b55a/20/02/28/222855-84914d38-eecb-4399-8aed-b71b5148ec83.jpg">
                        </div>
                      </div>
                      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <!-- third card -->
            </div>
          </div>
        </div>
      </div>
</div>

  
  <script src="assets/js/jquery.min.js"></script>
  <script src="assets/bootstrap/js/bootstrap.min.js"></script>
  <script src="assets/js/chart.min.js"></script>
  <script src="assets/js/bs-init.js"></script>
</body>

<%- include('footer') %>
